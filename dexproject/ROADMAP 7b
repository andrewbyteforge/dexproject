#### **4. JavaScript for Real-Time Updates**
**File to Update:** `paper_trading/static/js/paper_trading_dashboard.js`

**Add Functions:**
```javascript
// =============================================================================
// ACTIVE STRATEGIES WIDGET
// =============================================================================

// Load active strategies from API
async function loadActiveStrategies() {
    try {
        const response = await fetch('/paper-trading/api/active-strategies/');
        const data = await response.json();
        
        updateActiveStrategiesCount(data.count);
        
        if (data.active_strategies.length === 0) {
            showNoActiveStrategies();
        } else {
            renderActiveStrategies(data.active_strategies);
        }
    } catch (error) {
        console.error('Error loading active strategies:', error);
    }
}

// Render strategy cards
function renderActiveStrategies(strategies) {
    const container = document.getElementById('active-strategies-list');
    const emptyState = document.getElementById('no-active-strategies');
    
    container.innerHTML = strategies.map(strategy => 
        createStrategyCardHTML(strategy)
    ).join('');
    
    container.style.display = 'block';
    emptyState.style.display = 'none';
}

// Show empty state
function showNoActiveStrategies() {
    const container = document.getElementById('active-strategies-list');
    const emptyState = document.getElementById('no-active-strategies');
    
    container.style.display = 'none';
    emptyState.style.display = 'block';
}

// Create individual strategy card HTML
function createStrategyCardHTML(strategy) {
    const pnlColor = strategy.performance.pnl >= 0 ? 'text-success' : 'text-danger';
    const pnlSign = strategy.performance.pnl >= 0 ? '+' : '';
    const roiColor = strategy.performance.roi_percentage >= 0 ? 'text-success' : 'text-danger';
    const roiSign = strategy.performance.roi_percentage >= 0 ? '+' : '';
    
    const emoji = {
        'DCA': 'ğŸ’°',
        'GRID': 'ğŸ“Š',
        'SPOT': 'âš¡'
    }[strategy.strategy_type] || 'ğŸ¯';
    
    const statusColor = {
        'RUNNING': 'success',
        'PAUSED': 'warning',
        'COMPLETED': 'secondary'
    }[strategy.status] || 'secondary';
    
    // Return HTML template (use the template above with placeholders replaced)
}

// Update active count badge
function updateActiveStrategiesCount(count) {
    const badge = document.getElementById('active-strategies-count');
    if (badge) {
        badge.textContent = count;
    }
}

// Pause strategy
async function pauseStrategy(strategyId) {
    if (!confirm('Pause this strategy? It can be resumed later.')) {
        return;
    }
    
    try {
        const response = await fetch(
            `/paper-trading/api/strategy/${strategyId}/pause/`,
            {
                method: 'POST',
                headers: {
                    'X-CSRFToken': getCSRFToken(),
                    'Content-Type': 'application/json'
                }
            }
        );
        
        if (response.ok) {
            showToast('Strategy paused successfully', 'success');
            loadActiveStrategies(); // Refresh
        } else {
            showToast('Failed to pause strategy', 'error');
        }
    } catch (error) {
        console.error('Error pausing strategy:', error);
        showToast('Error pausing strategy', 'error');
    }
}

// Cancel strategy
async function cancelStrategy(strategyId) {
    if (!confirm('Cancel this strategy? This cannot be undone. All pending orders will be cancelled.')) {
        return;
    }
    
    try {
        const response = await fetch(
            `/paper-trading/api/strategy/${strategyId}/cancel/`,
            {
                method: 'POST',
                headers: {
                    'X-CSRFToken': getCSRFToken(),
                    'Content-Type': 'application/json'
                }
            }
        );
        
        if (response.ok) {
            showToast('Strategy cancelled successfully', 'success');
            loadActiveStrategies(); // Refresh
        } else {
            showToast('Failed to cancel strategy', 'error');
        }
    } catch (error) {
        console.error('Error cancelling strategy:', error);
        showToast('Error cancelling strategy', 'error');
    }
}

// Auto-refresh every 30 seconds
setInterval(loadActiveStrategies, 30000);

// Initialize on page load
document.addEventListener('DOMContentLoaded', function() {
    loadActiveStrategies();
});
```

